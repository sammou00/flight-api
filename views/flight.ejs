<!doctype html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <link rel="stylesheet" href="/css/style.css" />
        <title>Flight</title>
    </head>
    <body>
        <header>
            <h1>Flight</h1>
        </header>

        <div class="flight">
            <h2><%= flight.from %></h2>
            <p><%= flight.to %> to</p>
            <p><%= flight.date %></p>
            <p>$<%= flight.price %></p>
            <p><%= flight.company %></p>

            <button>
                <a href="/api/flights/">Show All</a>
            </button>
        </div>
    </body>
</html>
